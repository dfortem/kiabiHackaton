@model KiabiHackatonAmaris.Models.ProductViewModal

@{
    ViewBag.Title = "Home Page";

}
@*<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">*@
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<div class="jumbotron">
    <h1>KIABI'S P-Tracker</h1>
    <p>Track and find Easly your desired Article</p>
    <p>in KIABI's Stores</p>
</div>
<hr style="border-width:3px; border-bottom-width:thick; color:black" />
<br />
<div class="panel panel-info">
    <div class="panel-heading">Search Area</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <a href="#" id="AdvancedSearchAnchor">Advanced Search <i class="fa fa-caret-down" aria-hidden="true"></i></a>
            </div>
        </div>

        <hr>

        <div id="advancedSearchDiv" class="row visible">
            <div class="col-md-12 form-group">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <div class="col-md-5">
                                <label class="control-label">Store</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.PagedList.FirstOrDefault().TheStore, new SelectList(Model.PagedList.FirstOrDefault().getStores(), "Value", "Text"), "- Select store-", new { @class = "dropdown", style = "width:100%;" })

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="col-md-5">
                                <label class="control-label">Groups</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.PagedList.FirstOrDefault().Gender, new SelectList(Model.PagedList.FirstOrDefault().getGroups(), "Value", "Text"), "- Select Group -", new { @class = "dropdown", style = "width:100%;" })

                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-12 form-group">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <div class="col-md-5">
                                <label class="control-label">Categories</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.PagedList.FirstOrDefault().TheType, new SelectList(Model.PagedList.FirstOrDefault().getTypes(), "Value", "Text"), "- Select Type -", new { @class = "dropdown", style = "width:100%;" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-5">
                                <label class="control-label">Color</label>
                            </div>

                            <div class="col-md-7">

                                @Html.DropDownListFor(model => model.PagedList.FirstOrDefault().TheColor, new SelectList(Model.PagedList.FirstOrDefault().getColors(), "Value", "Text"), "- Select Color -", new { @class = "dropdown", style = "width:100%;" })

                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-12 form-group">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-4"></div>
                        <div class="col-md-4" style="text-align: center;">
                            <button class="btn btn-info searchBtn" type="button" data-url="@Url.Action("SearchTable", "Home")">
                                <span class="fa-search fa"></span>
                                Search
                            </button>
                            <button class="btn btn-info" type="button" id="clearRefreshBtn" data-url="@Url.Action("SearchTable", "Home")">
                                <i class="icon-refresh"></i>
                                <span>Clear Filter</span>
                            </button>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
